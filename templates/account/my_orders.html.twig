{% extends 'base.html.twig' %}

{% block body %}

    <!-- start hero -->
    <div id="hero" class="jarallax" data-speed="0.7" data-img-position="50% 100%" style="background-image: url({{ '/media/images/intro_img/11.jpg' }});color: #333;">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12">
                    <h2 class="__title"><span>Food Shack Company</span>My Orders</h2>


                </div>
            </div>
        </div>
    </div>
    <!-- end hero -->

    <!-- start main -->
    <main role="main">
        <!-- Common styles
        ================================================== -->

        <section class="container-top container">

            <div class="row m-b-30">
                {% include 'account/side_bar.html.twig' %}
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9">
                    <div class="edit_prof_bg1 py-2">
                        <div class="row"><div class="col-md-12"><h4>My order history</h4></div></div>

                    </div>
                    <div class="box">

                        <div class="row">
                            <div class="col-md-12">

                                <div class='table-responsive'>
                                    <div class="table-wrapper-profile">


                                        <table class="table table-striped table-hover table-responsive-n">
                                            <thead>
                                            <tr>
                                                <th>Order #</th>

                                                <th>Order Date</th>
                                                <th>Status</th>
                                                <th>Net Amount</th>
                                                <th>Action</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for order in orders %}
                                                <tr>
                                                <td>{{ order.reference }}</td>

                                                <td>{{ order.createdAt|date("F jS \\a\\t g:ia") }}</td>
                                                <td><span class="status text-{{ order.badge }}">â€¢</span> {{ order.status|capitalize }}</td>
                                                <td>{{ ((order.total+order.deliveryPrice)/100)|number_format(2, '.', ',') }} {{ currency }}</td>
                                                <td><a href="{{ path('my.order.detail', {id:order.id, locale:'en'}) }}" class="view" title="" data-toggle="tooltip" data-original-title="View Details"><i class="__ico fontello-right-1"></i></a></td>
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="clearfix">
                                            <div class="hint-text p-b-10">Showing <b>5</b> out of <b>25</b> entries</div>
                                            <ul class="pagination">
                                                <li class="page-item disabled"><a href="#">Previous</a></li>
                                                <li class="page-item"><a href="#" class="page-link">1</a></li>
                                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                                <li class="page-item"><a href="#" class="page-link">3</a></li>
                                                <li class="page-item active"><a href="#" class="page-link">4</a></li>
                                                <li class="page-item"><a href="#" class="page-link">5</a></li>
                                                <li class="page-item"><a href="#" class="page-link">6</a></li>
                                                <li class="page-item"><a href="#" class="page-link">7</a></li>
                                                <li class="page-item"><a href="#" class="page-link">Next</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>



                </div>
            </div>




        </section>

    </main>
    <!-- end main -->

