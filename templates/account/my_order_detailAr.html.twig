{% extends 'baseAr.html.twig' %}

{% block body %}

    <!-- start hero -->
    <div id="hero" class="jarallax" data-speed="0.7" data-img-position="50% 100%" style="background-image: url({{ '/media/images/intro_img/11.jpg' }});color: #333;">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12">
                    <h2 class="__title"><span>شركة فود شاك</span>طلباتي</h2>


                </div>
            </div>
        </div>
    </div>
    <!-- end hero -->

    <!-- start main -->
    <main role="main" style="background-color:#ccc;">
        <!-- Common styles
        ================================================== -->

        <section class="container-top container">

            <div class="row m-b-20">
                {% include 'account/side_bar.html.twig' %}
                <div class="col-md-8 col-sm-12 col-12">
                    <!--SHIPPING METHOD-->
                    <div class="row">
                        <div class="col-12">
                        <div class="panel panel-default">
                            <div class="panel-heading text-right"><h4 class="cl2">الطلب #{{ order.reference }}</h4></div>
                            <div class="panel-body">
                                <table class="table bg10 o-history-de table-responsive-n">
                                    <thead>
                                    <tr class="order-details_top">
                                        <td class="text-center"><strong># المنتج:</strong></td>
                                        <td class="text-center">الوحدات</td>
                                        <td class="text-center">المجموع</td>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                    {% for orderDetail in orderDetails %}
                                        <tr>
                                            <td class="text-center">{{ orderDetail.product|upper }}</td>
                                            <td class="text-center">{{ orderDetail.quantity }}</td>
                                            <td class="text-right">{{ (orderDetail.total/100)|number_format(2, '.', ',') }} {{ currency_ar }}</td>
                                        </tr>
                                    {% endfor %}
                                    <tr class="noBorder">
                                        <td></td>
                                        <td>توصيل:</td>
                                        <td class="text-right">{{ (order.deliveryPrice/100)|number_format(2, '.', ',') }} {{ currency_ar }}</td>

                                    </tr>
                                    <tr class="noBorder">
                                        <td></td>
                                        <td><strong>المبلغ الإجمالي:</strong></td>
                                        <td class="text-right"><strong>{{ ((order.total+order.deliveryPrice)/100)|number_format(2, '.', ',') }} {{ currency_ar }}</strong></td>

                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                        <!--REVIEW ORDER-->
                        <div class="panel bg10 panel-default">
                            <div class="panel-heading p-t-12 p-b-12 p-l-20 order-details_top m-b-20">
                                <h5>عنوان التسليم</h5>
                            </div>
                            <div class="panel-body panel-order p-b-20">
                                <div class="col-md-12">

                                    <p>السيد. {{ order.shippingFullName }}.<br>
                                        عنوان: {{ order.shippingHouseNumber ~ '-' ~ order.shippingStreetNumber }},<br>
                                        {{ order.shippingCity ~ '-' ~ order.shippingProvince}}.<br>
                                        هاتف: {{ order.shippingPhone}}</p>
                                </div>



                            </div>

                        </div>
                        <!--REVIEW ORDER END-->
                    </div>
                    </div>

                    <!--SHIPPING METHOD END-->
                </div>
            </div>



        </section>

    </main>
    <!-- end main -->
{% endblock %}

